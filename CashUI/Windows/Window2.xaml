<Window x:Class="CashUI.Windows.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CashUI.Windows"
        mc:Ignorable="d"
        Title="Choose fee" Height="200" Width="400" Background="Beige">
    <Grid>
        <StackPanel>
            <Label Content="Input fee:" FontSize="16" Margin="20,40,0,0" HorizontalAlignment="Left" 
                   Width="90" Height="32"/>
            <TextBox Margin="120,-32,0,0" HorizontalAlignment="Left" Width="250" Height="20" FontSize="16"
                     Name="TxtChoose" PreviewTextInput="NumberValidationTextBox" MaxLength="10"/>
            <Button Content="Enter" FontSize="16" Name="Choose" Click="Choose_Click" Margin="30" 
                    Width="150" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
